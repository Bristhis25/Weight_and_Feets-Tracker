<h1 class="text-2xl font-bold mb-4">📌 Ajouter un Nouveau Suivi de Poids</h1>

<%= form_with(model: @weight_entry, local: true, class: "bg-white p-6 rounded-lg shadow-md") do |form| %>
  
  <% if @weight_entry.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4">
      <h2 class="font-semibold">⚠️ Erreur(s) de validation :</h2>
      <ul class="list-disc pl-5">
        <% @weight_entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :weight, "⚖️ Poids", class: "block font-medium text-gray-700" %>
    <%= form.number_field :weight, step: "0.1", placeholder: "Entrez votre poids", class: "w-full p-2 border border-gray-300 rounded-md mt-1" %>
  </div>

  <div class="mb-4">
    <%= form.label :date, "📅 Date", class: "block font-medium text-gray-700" %>
    <%= form.date_field :date, class: "w-full p-2 border border-gray-300 rounded-md mt-1" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "💾 Enregistrer", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition" %>
  </div>

<% end %>

<div class="mt-4">
  <%= link_to '⬅️ Retour', weight_entries_path, class: "text-blue-500 hover:underline" %>
</div>
