<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
  <h1 class="text-2xl font-semibold text-center text-gray-800">Ajouter un nouveau suivi de poids</h1>
  <hr class="my-4 border-gray-300"/>

  <%= form_with(model: @weight_entry, local: true, class: "space-y-4") do |form| %>
    
    <% if @weight_entry.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <h2 class="font-semibold">‚ö†Ô∏è Erreur(s) de validation :</h2>
        <ul class="list-disc ml-4">
          <% @weight_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :weight, "‚öñÔ∏è Poids", class: "block text-gray-700 font-medium" %>
      <%= form.number_field :weight, step: "0.1", placeholder: "Entrez votre poids", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :date, "üìÖ Date", class: "block text-gray-700 font-medium" %>
      <%= form.date_field :date, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "üíæ Enregistrer", class: "bg-indigo-500 text-black px-4 py-2 rounded-lg hover:bg-indigo-700 transition duration-200" %>
    </div>

  <% end %>

  <div class="text-center mt-4">
    <%= link_to '‚¨ÖÔ∏è Retour √† la liste', weight_entries_path, 
          class: "text-indigo-500 hover:underline font-medium" %>
  </div>
</div>
